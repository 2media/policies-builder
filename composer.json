{
    "name": "2media/policies-builder",
    "description": "PHP Package to generate policies for websites",
    "keywords": [
        "twomedia",
        "policies-builder"
    ],
    "homepage": "https://github.com/2media/policies-builder",
    "license": "MIT",
    "authors": [
        {
            "name": "Lena Fuchs",
            "email": "lena.fuchs@clark.io",
            "role": "Developer"
        },
        {
            "name": "Stefan Zweifel",
            "email": "stefan.zweifel@clark.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2",
        "illuminate/cache": "^11.0 || ^12.0",
        "illuminate/container": "^11.0 || ^12.0",
        "illuminate/filesystem": "^11.0 || ^12.0",
        "illuminate/http": "^11.0 || ^12.0",
        "illuminate/translation": "^11.0 || ^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.19",
        "phpunit/phpunit": "^11.0",
        "rector/rector": "^2.0",
        "tightenco/jigsaw": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Twomedia\\PoliciesBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Twomedia\\PoliciesBuilder\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
