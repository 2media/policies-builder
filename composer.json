{
    "name": "2media/policies-builder",
    "description": "PHP Package to generate policies for websites",
    "keywords": [
        "twomedia",
        "policies-builder"
    ],
    "homepage": "https://github.com/2media/policies-builder",
    "license": "MIT",
    "authors": [
        {
            "name": "Lena Fuchs",
            "email": "lena.fuchs@finanzen.com",
            "role": "Developer"
        },
        {
            "name": "Stefan Zweifel",
            "email": "stefan.zweifel@finanzen.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2",
        "illuminate/cache": "^9.0 || ^10.0",
        "illuminate/container": "^9.0 || ^10.0",
        "illuminate/filesystem": "^9.0 || ^10.0",
        "illuminate/http": "^9.0 || ^10.0",
        "illuminate/translation": "^9.0 || ^10.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5 || ^10.0",
        "tightenco/jigsaw": "^1.3",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Twomedia\\PoliciesBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Twomedia\\PoliciesBuilder\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
